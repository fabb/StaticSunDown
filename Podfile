source 'https://github.com/CocoaPods/Specs.git'

plugin 'cocoapods-static-frameworks'

platform :ios, '10.0'

use_frameworks!
static_frameworks
install! 'cocoapods', :share_schemes_for_development_pods => false

target 'StaticSunDown' do

	pod 'UIWebView-Markdown', :git => 'https://github.com/Huddle/UIWebView-Markdown.git' , :tag => '1.0.4'

end
